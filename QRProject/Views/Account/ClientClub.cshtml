
@{
    Layout = "~/views/shared/_AdminLayout.cshtml";
}
@using QRProject.Core
@using QRProject.helper
<style>
 .tblCnb{width:100%;font-family:IranSansl;font-weight:bold;} 

</style>
<br />
<center>
    <img src="~/images/ClubClients.png" alt="opinion" />
</center>


<table id="myClub" class="table table-striped table-bordered tblCnb" >
    <thead>
        <tr>
            <th>شماره تماس مشتریان</th>
            <th>تاریخ ثبت شماره</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
    <tbody>


        @foreach (var item in (List<CustomerClub>)ViewBag.ClubList)
            {
            <tr>
                <td class="translate">@item.PhoneNumber</td>
                <td class="translate">
                    @Replace.ToShamsi(item.CreateDate)
                </td>
                <td>

                    @Html.ActionLink(" حذف ", "DeleteClub", "Account", new { opinionId = item.Id, ClientId = ViewBag.clientid }, new { onclick = "return confirm('آیا برای حذف مطمئن هستید؟');" })


                </td>
            </tr>
        }



    </tbody>
</table>
@*farsi kardane adad*@
<script type="text/javascript">
        $(document).ready(function () {
            var arabicNumbers = ['۰', '۱', '۲', '۳', '۴', '۵', '۶', '۷', '۸', '۹'];
            $('.translate').text(function (i, v) {
                var chars = v.split('');
                for (var i = 0; i < chars.length; i++) {
                    if (/\d/.test(chars[i])) {
                        chars[i] = arabicNumbers[chars[i]];
                    }
                }
                return chars.join('');
            })


        });





</script>

